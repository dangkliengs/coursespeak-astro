---
import Layout from "../../layouts/Layout.astro";
import AdminProtection from "../../components/AdminProtection.astro";
import AdminAuthGate from "../../components/AdminAuthGate";
import { readDeals } from "../../lib/store";

const allDeals = await readDeals();

const pageTitle = "Manage Deals - Admin Dashboard";
const pageDescription = "View, edit, and delete course deals on CourseSpeak.";
---

<Layout title={pageTitle} description={pageDescription}>
  <AdminProtection>
    <AdminAuthGate>
      <div style={{ background: "#0b0d12", minHeight: "100vh", color: "#e2e8f0" }}>
    <div style={{ maxWidth: "1200px", margin: "0 auto", padding: "2rem 1rem" }}>
      <div style={{ marginBottom: "2rem", display: "flex", justifyContent: "space-between", alignItems: "center" }}>
        <div>
          <h1 style={{ 
            fontSize: "2.5rem", 
            fontWeight: 700, 
            color: "#fff", 
            marginBottom: "0.5rem" 
          }}>
            Manage Deals
          </h1>
          <p style={{ 
            fontSize: "1.125rem", 
            color: "#a9b0c0" 
          }}>
            {allDeals.length} total deals
          </p>
        </div>
        <div style={{ display: "flex", gap: "1rem", alignItems: "center" }}>
          <a 
            href="/deals" 
            target="_blank"
            style={{
              padding: "0.75rem 1.5rem",
              backgroundColor: "#10b981",
              color: "#fff",
              textDecoration: "none",
              borderRadius: "0.5rem",
              fontWeight: 600,
              border: "1px solid #10b981",
              transition: "all 0.2s ease"
            }}
            onmouseover="this.style.backgroundColor='#059669'"
            onmouseout="this.style.backgroundColor='#10b981'"
          >
            View Posts/Deals â†’
          </a>
          <a href="/admin/deals/create" style={{
            display: "inline-block",
            padding: "0.75rem 1.5rem",
            backgroundColor: "#3b82f6",
            color: "#fff",
            textDecoration: "none",
            borderRadius: "0.5rem",
            fontWeight: 600
          }}>
            + Create New Deal
          </a>
        </div>
      </div>

      <!-- Search Form -->
      <div style={{ marginBottom: "2rem" }}>
        <div style={{
          borderRadius: "1rem",
          border: "1px solid rgba(91, 140, 255, 0.24)",
          background: "linear-gradient(140deg, rgba(11, 13, 18, 0.98) 0%, rgba(18, 24, 40, 0.98) 55%, rgba(42, 64, 110, 0.38) 100%)",
          boxShadow: "0 18px 36px rgba(8, 12, 26, 0.45)",
          padding: "1.5rem"
        }}>
          <div style={{ display: "flex", gap: "1rem", alignItems: "flex-end", flexWrap: "wrap" }}>
            <div style={{ flex: 1, minWidth: "200px" }}>
              <label for="searchInput" style={{ display: "block", color: "#fff", marginBottom: "0.5rem", fontWeight: 600 }}>
                Search Courses
              </label>
              <input 
                type="text" 
                id="searchInput"
                name="searchInput"
                placeholder="Search by title, provider, or category..."
                style={{
                  width: "100%",
                  padding: "0.75rem",
                  backgroundColor: "rgba(255, 255, 255, 0.1)",
                  border: "1px solid rgba(91, 140, 255, 0.24)",
                  borderRadius: "0.5rem",
                  color: "#fff",
                  fontSize: "1rem"
                }}
                oninput="performSearch()"
                onkeypress="if(event.key === 'Enter') performSearch()"
              />
            </div>
            <div style={{ minWidth: "150px" }}>
              <label for="categoryFilter" style={{ display: "block", color: "#fff", marginBottom: "0.5rem", fontWeight: 600 }}>
                Category
              </label>
              <select 
                id="categoryFilter"
                name="categoryFilter"
                style={{
                  width: "100%",
                  padding: "0.75rem",
                  backgroundColor: "rgba(255, 255, 255, 0.1)",
                  border: "1px solid rgba(91, 140, 255, 0.24)",
                  borderRadius: "0.5rem",
                  color: "#fff",
                  fontSize: "1rem"
                }}
                onchange="filterDeals()"
              >
                <option value="">All Categories</option>
              </select>
            </div>
            <button 
              onclick="clearFilters()"
              style={{
                padding: "0.75rem 1.5rem",
                backgroundColor: "transparent",
                color: "#a9b0c0",
                border: "1px solid #a9b0c0",
                borderRadius: "0.5rem",
                fontWeight: 600,
                cursor: "pointer"
              }}
            >
              Clear
            </button>
            <button 
              onclick="performSearch()"
              style={{
                padding: "0.75rem 1.5rem",
                backgroundColor: "#3b82f6",
                color: "#fff",
                border: "1px solid #3b82f6",
                borderRadius: "0.5rem",
                fontWeight: 600,
                cursor: "pointer"
              }}
            >
              Search
            </button>
          </div>
          <div id="searchResults" style={{ marginTop: "1rem", color: "#a9b0c0", fontSize: "0.875rem" }}>
            Showing all {allDeals.length} deals
          </div>
        </div>
      </div>

      <div style={{
        borderRadius: "1rem",
        border: "1px solid rgba(91, 140, 255, 0.24)",
        background: "linear-gradient(140deg, rgba(11, 13, 18, 0.98) 0%, rgba(18, 24, 40, 0.98) 55%, rgba(42, 64, 110, 0.38) 100%)",
        boxShadow: "0 18px 36px rgba(8, 12, 26, 0.45)",
        overflow: "hidden"
      }}>
        <div style={{ overflowX: "auto" }}>
          <table style={{ width: "100%", borderCollapse: "collapse" }}>
            <thead>
              <tr style={{ borderBottom: "1px solid rgba(91, 140, 255, 0.24)" }}>
                <th style={{ padding: "1rem", textAlign: "left", color: "#fff", fontWeight: 600 }}>Title</th>
                <th style={{ padding: "1rem", textAlign: "left", color: "#fff", fontWeight: 600 }}>Provider</th>
                <th style={{ padding: "1rem", textAlign: "left", color: "#fff", fontWeight: 600 }}>Category</th>
                <th style={{ padding: "1rem", textAlign: "left", color: "#fff", fontWeight: 600 }}>Price</th>
                <th style={{ padding: "1rem", textAlign: "left", color: "#fff", fontWeight: 600 }}>Date</th>
                <th style={{ padding: "1rem", textAlign: "left", color: "#fff", fontWeight: 600 }}>Coupon</th>
                <th style={{ padding: "1rem", textAlign: "left", color: "#fff", fontWeight: 600 }}>Actions</th>
              </tr>
            </thead>
            <tbody id="dealsTableBody">
              {allDeals.slice(0, 50).map((deal) => (
                <tr style={{ borderBottom: "1px solid rgba(91, 140, 255, 0.1)" }} data-deal-id={deal.id}>
                  <td style={{ padding: "1rem", color: "#e2e8f0" }}>
                    <div style={{ maxWidth: "300px" }}>
                      <div style={{ fontWeight: 600, marginBottom: "0.25rem" }}>{deal.title}</div>
                      <div style={{ fontSize: "0.875rem", color: "#a9b0c0" }}>ID: {deal.id}</div>
                    </div>
                  </td>
                  <td style={{ padding: "1rem", color: "#e2e8f0" }}>{deal.provider}</td>
                  <td style={{ padding: "1rem", color: "#e2e8f0" }}>
                    <div>
                      <div>{deal.category}</div>
                      {deal.subcategory && (
                        <div style={{ fontSize: "0.875rem", color: "#a9b0c0" }}>{deal.subcategory}</div>
                      )}
                    </div>
                  </td>
                  <td style={{ padding: "1rem", color: "#e2e8f0" }}>
                    ${deal.price}
                    {deal.originalPrice && (
                      <span style={{ 
                        textDecoration: "line-through", 
                        color: "#a9b0c0", 
                        marginLeft: "0.5rem" 
                      }}>
                        ${deal.originalPrice}
                      </span>
                    )}
                  </td>
                  <td style={{ padding: "1rem", color: "#e2e8f0" }}>
                    <div style={{ fontSize: "0.875rem" }}>
                      {deal.updatedAt ? new Date(deal.updatedAt).toLocaleDateString() : (deal.createdAt ? new Date(deal.createdAt).toLocaleDateString() : 'Unknown')}
                    </div>
                  </td>
                  <td style={{ padding: "1rem", color: "#e2e8f0" }}>
                    <div style={{ 
                      fontSize: "0.875rem", 
                      fontFamily: "monospace",
                      backgroundColor: "rgba(91, 140, 255, 0.1)",
                      padding: "0.25rem 0.5rem",
                      borderRadius: "0.25rem",
                      display: "inline-block"
                    }}>
                      {deal.coupon || 'N/A'}
                    </div>
                  </td>
                  <td style={{ padding: "1rem" }}>
                    <div style={{ display: "flex", gap: "0.5rem", flexWrap: "wrap" }}>
                      <a href={`/deal/${deal.id}`} target="_blank" style={{
                        padding: "0.5rem 1rem",
                        backgroundColor: "#10b981",
                        color: "#fff",
                        textDecoration: "none",
                        borderRadius: "0.375rem",
                        fontSize: "0.875rem",
                        fontWeight: 600,
                        border: "1px solid #10b981"
                      }}>
                        View
                      </a>
                      <a href={`/admin/deals/edit/${deal.id}`} style={{
                        padding: "0.5rem 1rem",
                        backgroundColor: "transparent",
                        color: "#3b82f6",
                        border: "1px solid #3b82f6",
                        textDecoration: "none",
                        borderRadius: "0.375rem",
                        fontSize: "0.875rem",
                        fontWeight: 600
                      }}>
                        Edit
                      </a>
                      <button 
                        onclick={`deleteDeal('${deal.id}')`}
                        style={{
                          padding: "0.5rem 1rem",
                          backgroundColor: "transparent",
                          color: "#ef4444",
                          border: "1px solid #ef4444",
                          borderRadius: "0.375rem",
                          fontSize: "0.875rem",
                          fontWeight: 600,
                          cursor: "pointer"
                        }}
                      >
                        Delete
                      </button>
                    </div>
                  </td>
                </tr>
              ))}
            </tbody>
          </table>
        </div>
        
        {allDeals.length > 50 && (
          <div style={{ padding: "1rem", textAlign: "center", color: "#a9b0c0" }}>
            Showing first 50 deals of {allDeals.length}
          </div>
        )}
      </div>
    </div>
  </div>

  <!-- Hidden element to store deals data for JavaScript -->
  <div id="deals-data" style="display: none;">{JSON.stringify(allDeals)}</div>

  <script>
    console.log('Script loaded!');
    
    document.addEventListener('DOMContentLoaded', function() {
      console.log('DOM loaded');
      
      const searchInput = document.getElementById('searchInput');
      const categoryFilter = document.getElementById('categoryFilter');
      const tableBody = document.getElementById('dealsTableBody');
      
      console.log('Elements found:', {
        searchInput: !!searchInput,
        categoryFilter: !!categoryFilter,
        tableBody: !!tableBody
      });
      
      if (searchInput) {
        searchInput.addEventListener('input', function(this: HTMLInputElement) {
          console.log('Input changed:', this.value);
          performSearch();
        });
      }
      
      loadDataAndInitialize();
    });
    
    let allDealsData: any[] = [];
    
    function loadDataAndInitialize() {
      try {
        const dealsElement = document.getElementById('deals-data');
        if (dealsElement) {
          allDealsData = JSON.parse(dealsElement.textContent);
          console.log('Data loaded:', allDealsData.length, 'deals');
        }
      } catch (error) {
        console.error('Error loading data:', error);
      }
    }
    
    function performSearch() {
      console.log('Searching...');
      
      const searchInput = document.getElementById('searchInput') as HTMLInputElement;
      const tableBody = document.getElementById('dealsTableBody');
      const searchResults = document.getElementById('searchResults');
      
      if (!searchInput || !tableBody || !searchResults) return;
      
      const searchTerm = searchInput.value.toLowerCase();
      console.log('Search term:', searchTerm);
      
      let filteredDeals = allDealsData.filter(deal => {
        return !searchTerm || 
          (deal.title && deal.title.toLowerCase().includes(searchTerm)) ||
          (deal.provider && deal.provider.toLowerCase().includes(searchTerm)) ||
          (deal.category && deal.category.toLowerCase().includes(searchTerm)) ||
          (deal.coupon && deal.coupon.toLowerCase().includes(searchTerm));
      });
      
      console.log('Found:', filteredDeals.length, 'deals');
      
      tableBody.innerHTML = '';
      
      filteredDeals.slice(0, 50).forEach(deal => {
        const row = document.createElement('tr');
        row.style.borderBottom = '1px solid rgba(91, 140, 255, 0.1)';
        
        row.innerHTML = `
          <td style="padding: 1rem; color: #e2e8f0;">
            <div style="max-width: 300px;">
              <div style="font-weight: 600; margin-bottom: 0.25rem;">${deal.title || 'Untitled'}</div>
              <div style="font-size: 0.875rem; color: #a9b0c0;">ID: ${deal.id || 'Unknown'}</div>
            </div>
          </td>
          <td style="padding: 1rem; color: #e2e8f0;">${deal.provider || 'Unknown'}</td>
          <td style="padding: 1rem; color: #e2e8f0;">${deal.category || 'Uncategorized'}</td>
          <td style="padding: 1rem; color: #e2e8f0;">$${deal.price || '0'}</td>
          <td style="padding: 1rem; color: #e2e8f0;">
            <div style="font-size: 0.875rem;">
              ${deal.updatedAt ? new Date(deal.updatedAt).toLocaleDateString() : (deal.createdAt ? new Date(deal.createdAt).toLocaleDateString() : 'Unknown')}
            </div>
          </td>
          <td style="padding: 1rem; color: #e2e8f0;">
            <div style="
              font-size: 0.875rem;
              font-family: monospace;
              background-color: rgba(91, 140, 255, 0.1);
              padding: 0.25rem 0.5rem;
              border-radius: 0.25rem;
              display: inline-block;
            ">
              ${deal.coupon || 'N/A'}
            </div>
          </td>
          <td style="padding: 1rem;">
            <div style="display: flex; gap: 0.5rem; flex-wrap: wrap;">
              <a href="/deal/${deal.id || ''}" target="_blank" style="
                padding: 0.5rem 1rem;
                background-color: #10b981;
                color: #fff;
                text-decoration: none;
                border-radius: 0.375rem;
                font-size: 0.875rem;
                font-weight: 600;
                border: 1px solid #10b981;
              ">View</a>
              <a href="/admin/deals/edit/${deal.id || ''}" style="
                padding: 0.5rem 1rem;
                background-color: transparent;
                color: #3b82f6;
                border: 1px solid #3b82f6;
                text-decoration: none;
                border-radius: 0.375rem;
                font-size: 0.875rem;
                font-weight: 600;
              ">Edit</a>
            </div>
          </td>
        `;
        
        tableBody.appendChild(row);
      });
      
      searchResults.textContent = filteredDeals.length === 0 
        ? 'No deals found' 
        : `Showing ${filteredDeals.length} of ${allDealsData.length} deals`;
    }
    
    function clearFilters() {
      console.log('Clearing filters');
      const searchInput = document.getElementById('searchInput') as HTMLInputElement;
      
      if (searchInput) {
        searchInput.value = '';
        performSearch();
      }
    }
    
    function testSearch() {
      console.log('Testing search function');
      performSearch();
    }
    
    function deleteDeal(dealId: string) {
      console.log('Deleting deal:', dealId);
      
      if (!confirm('Are you sure you want to delete this deal? This action cannot be undone.')) {
        return;
      }
      
      // For GitHub Pages, prepare delete data and show instructions
      const deleteInfo = {
        action: 'DELETE',
        dealId: dealId,
        timestamp: new Date().toISOString()
      };
      
      localStorage.setItem('pendingDealDelete', JSON.stringify(deleteInfo));
      
      alert('Delete action prepared!\n\nSince this is hosted on GitHub Pages, you need to:\n1. Copy the delete information below\n2. Manually remove the deal from deals.json\n3. Commit and push changes to GitHub\n\nCheck browser console for the delete information.');
      
      console.log('Pending delete info:', deleteInfo);
      console.log('To apply this delete, remove the deal with ID:', dealId, 'from deals.json and commit to GitHub.');
      
      // Copy delete info to clipboard
      if (navigator.clipboard) {
        const deleteText = `DELETE DEAL: ${dealId}\nTimestamp: ${new Date().toISOString()}\n\nRemove this deal from src/data/deals.json and commit to GitHub.`;
        navigator.clipboard.writeText(deleteText).then(() => {
          alert('Delete information copied to clipboard! Remove the deal from deals.json and commit to GitHub.');
        });
      }
      
      // Remove row from table for immediate visual feedback
      const row = document.querySelector(`[data-deal-id="${dealId}"]`) as HTMLElement;
      if (row) {
        row.style.opacity = '0.5';
        row.style.textDecoration = 'line-through';
      }
      
      // Update count
      const countElement = document.querySelector('p');
      if (countElement && countElement.textContent?.includes('total deals')) {
        const match = countElement.textContent.match(/\d+/);
        if (match) {
          const currentCount = parseInt(match[0]);
          countElement.textContent = `${currentCount - 1} total deals`;
        }
      }
    }
    
    // Add type declarations for global window
    declare global {
      interface Window {
        performSearch: () => void;
        clearFilters: () => void;
        testSearch: () => void;
        deleteDeal: (dealId: string) => void;
      }
    }
    window.performSearch = performSearch;
    window.clearFilters = clearFilters;
    window.testSearch = testSearch;
    window.deleteDeal = deleteDeal;
    console.log('Functions exposed');
  </script>
  </AdminAuthGate>
  </AdminProtection>
</Layout>
